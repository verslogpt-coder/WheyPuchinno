<div class="cart-page">
  <div class="page-width">
    <div class="cart-header">
      <h1 class="cart-title">Seu Carrinho</h1>
      <p class="cart-subtitle">{{ cart.item_count }} {% if cart.item_count == 1 %}item{% else %}itens{% endif %} no seu carrinho</p>
    </div>

    {% if cart.item_count > 0 %}
      <div class="cart-grid">
        <div class="cart-items-wrapper">
          <form action="{{ routes.cart_url }}" method="post" id="cart-form" class="cart-form">
            {% for item in cart.items %}
              <div class="cart-item">
                <div class="cart-item-image">
                  {% if item.image %}
                    <img src="{{ item.image | image_url: width: 120 }}" alt="{{ item.image.alt | escape }}">
                  {% else %}
                    <div class="cart-item-image-placeholder">ðŸ“¦</div>
                  {% endif %}
                </div>

                <div class="cart-item-details">
                  <a href="{{ item.url }}" class="cart-item-title">{{ item.product.title }}</a>
                  {% if item.variant.title != 'Default Title' %}
                    <p class="cart-item-variant">{{ item.variant.title }}</p>
                  {% endif %}
                  <div class="cart-item-price">{{ item.price | money }}</div>
                </div>

                <div class="cart-item-actions">
                  <div class="cart-quantity">
                    <button type="button" class="cart-quantity-button" onclick="changeQuantity('{{ item.key }}', -1)">-</button>
                    <input type="number" name="updates[]" value="{{ item.quantity }}" min="0" class="cart-quantity-input" data-key="{{ item.key }}">
                    <button type="button" class="cart-quantity-button" onclick="changeQuantity('{{ item.key }}', 1)">+</button>
                  </div>
                  <a href="{{ item.url_to_remove }}" class="cart-item-remove">Remover</a>
                </div>
              </div>
            {% endfor %}
            <button type="submit" class="cart-update-button">Atualizar Carrinho</button>
          </form>
        </div>

        <div class="cart-summary-wrapper">
          <div class="cart-summary">
            <h2 class="cart-summary-title">Resumo do Pedido</h2>
            <div class="cart-summary-row">
              <span>Subtotal ({{ cart.item_count }} {% if cart.item_count == 1 %}item{% else %}itens{% endif %})</span>
              <span>{{ cart.total_price | money }}</span>
            </div>
            <div class="cart-summary-row">
              <span>Frete</span>
              <span>Calculado no checkout</span>
            </div>
            <div class="cart-summary-total">
              <span>Total</span>
              <span>{{ cart.total_price | money }}</span>
            </div>
            <a href="/checkout" class="cart-checkout-button">Finalizar compra</a>
          </div>
        </div>
      </div>
    {% else %}
      <div class="cart-empty">
        <div class="cart-empty-icon">ðŸ›’</div>
        <h1 class="cart-empty-title">Seu carrinho estÃ¡ vazio</h1>
        <p class="cart-empty-subtitle">Adicione alguns produtos incrÃ­veis ao seu carrinho!</p>
        <a href="/collections/all" class="cart-continue-button">Continuar Comprando</a>
      </div>
    {% endif %}
  </div>
</div>

