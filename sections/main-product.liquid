<script>
// Vari√°veis globais para o carousel
let currentImageIndex = 0;
let totalImages = 0;

// Fun√ß√µes do carousel
function carouselNext() {
  if (totalImages > 0) {
    currentImageIndex = (currentImageIndex + 1) % totalImages;
    updateCarousel();
  }
}

function carouselPrev() {
  if (totalImages > 0) {
    currentImageIndex = (currentImageIndex - 1 + totalImages) % totalImages;
    updateCarousel();
  }
}

function updateCarousel() {
  const carouselWrappers = document.querySelectorAll('.carousel-image-wrapper');
  const mainImage = document.getElementById('main-product-image');
  const carouselTrack = document.getElementById('carousel-track');
  
  carouselWrappers.forEach((wrapper, index) => {
    wrapper.classList.toggle('active', index === currentImageIndex);
    
    if (index === currentImageIndex) {
      const imageUrl = wrapper.dataset.image;
      if (mainImage && imageUrl) {
        mainImage.src = imageUrl;
      }
      
      // Scroll autom√°tico para a miniatura ativa no mobile
      if (carouselTrack && window.innerWidth <= 768) {
        const wrapperElement = carouselWrappers[index];
        if (wrapperElement) {
          const scrollLeft = wrapperElement.offsetLeft - (carouselTrack.offsetWidth / 2) + (wrapperElement.offsetWidth / 2);
          carouselTrack.scrollTo({
            left: scrollLeft,
            behavior: 'smooth'
          });
        }
      }
    }
  });
}

