<section class="product-section-figma" data-product-id="{{ product.id }}">
  <div class="product-container-figma">
    
    <!-- Coluna Esquerda: Galeria -->
    <div class="product-gallery-col">
      <!-- Imagem Principal -->
      <div class="product-image-main">
        {% if product.featured_media %}
          <img 
            id="main-product-image"
            src="{{ product.featured_media | image_url: width: 1200 }}" 
            alt="{{ product.title }}"
            loading="eager"
          >
        {% else %}
          <div class="image-placeholder">
            <svg width="120" height="120" viewBox="0 0 24 24" fill="none">
              <rect x="3" y="3" width="18" height="18" rx="2" stroke="#E0E0E0" stroke-width="2"/>
            </svg>
          </div>
        {% endif %}
      </div>
      
      <!-- Carousel de Miniaturas - NAVEGA√á√ÉO FUNCIONAL -->
      <div class="image-carousel">
        <div class="carousel-container">
          {% if product.media.size > 1 %}
          <button class="carousel-arrow prev" onclick="carouselPrev()">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <rect width="24" height="24" rx="8" fill="#F44027"/>
              <path d="M14 8L10 12L14 16" stroke="#FFFCFC" stroke-width="1.2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </button>
          {% endif %}
          
          <div class="carousel-track" id="carousel-track">
            <!-- Mostrar TODAS as imagens do produto -->
            {% for media in product.media %}
            <div class="carousel-image-wrapper {% if forloop.index == 1 %}active{% endif %}" 
                 data-image="{{ media | image_url: width: 1200 }}">
              <div class="carousel-image">
                <img src="{{ media | image_url: width: 300 }}" alt="{{ media.alt }}" loading="lazy">
              </div>
            </div>
            {% endfor %}
            
            <!-- Se n√£o h√° imagens, mostrar placeholder -->
            {% if product.media.size == 0 %}
            <div class="carousel-image active">
              <div class="placeholder-image">
                <svg width="60" height="60" viewBox="0 0 24 24" fill="none">
                  <rect x="3" y="3" width="18" height="18" rx="2" stroke="#E0E0E0" stroke-width="2"/>
                </svg>
              </div>
            </div>
            {% endif %}
          </div>
          
          {% if product.media.size > 1 %}
          <button class="carousel-arrow next" onclick="carouselNext()">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <rect width="24" height="24" rx="8" fill="#F44027"/>
              <path d="M10 16L14 12L10 8" stroke="#FFFCFC" stroke-width="1.2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </button>
          {% endif %}
        </div>
      </div>
    </div>
    
    <!-- Coluna Direita: Informa√ß√µes -->
    <div class="product-info-col">
      
      <form class="product-form-main" action="/cart/add" method="post" enctype="multipart/form-data" id="product-form-{{ product.id }}">
        <input type="hidden" name="id" id="variant-id" value="{{ product.selected_or_first_available_variant.id }}">
        
        {% for block in section.blocks %}
          {% case block.type %}
            
            {% when 'product_rating' %}
            <!-- Rating -->
            <div class="product-rating" {{ block.shopify_attributes }}>
              <div class="rating-stars">
                <span class="star">‚òÖ</span>
                <span class="star">‚òÖ</span>
                <span class="star">‚òÖ</span>
                <span class="star">‚òÖ</span>
                <span class="star">‚òÖ</span>
              </div>
              <div class="rating-divider"></div>
              <span class="rating-count">{{ block.settings.rating_count }}</span>
            </div>
            
            {% when 'product_title' %}
            <!-- T√≠tulo -->
            <h1 class="product-title" {{ block.shopify_attributes }}>{{ product.title }}</h1>
            
            {% when 'product_description' %}
            <!-- Descri√ß√£o -->
            <div class="product-desc" id="product-desc" {{ block.shopify_attributes }}>
              <div class="product-desc__content">
                {{ product.description }}
              </div>
            </div>
            
            {% when 'ingredients_button' %}
            <!-- Bot√£o de Ingredientes -->
            <div {{ block.shopify_attributes }}>
              {% render 'ingredients-modal', product: product %}
            </div>
            
            {% when 'quantity_options' %}
            <!-- Cards de Quantidade + Bot√£o (Block) -->
            <div {{ block.shopify_attributes }}>
              
              <!-- Seletor de Sabor/Variante -->
              {% unless product.has_only_default_variant %}
              <div class="flavor-selector">
                <div class="flavor-pill-label">Escolha o sabor:</div>
                <div class="flavor-options">
                  {% for variant in product.variants %}
                    {% if variant.available %}
                    <button type="button" 
                            class="flavor-pill {% if forloop.first %}active{% endif %}" 
                            data-variant-id="{{ variant.id }}"
                            data-variant-price="{{ variant.price | money_without_currency }}"
                            data-variant-compare="{{ variant.compare_at_price | money_without_currency }}">
                      <span>{{ variant.title }}</span>
                    </button>
                    {% endif %}
                {% endfor %}
                </div>
              </div>
              {% endunless %}
              
              <div class="quantity-options">
                
                <!-- Card 1 -->
                <label class="qty-card">
                  <input type="radio" name="quantity" value="1" checked>
                  <div class="qty-card-body">
                    <div class="qty-left">
                      <div class="qty-title">{{ block.settings.qty1_title }}</div>
                      <div class="qty-info">
                        <div class="icon-check">
                          <div class="check-circle"></div>
                          <div class="check-mark"></div>
                        </div>
                        <span>{{ block.settings.qty1_info }}</span>
                      </div>
                    </div>
                    <div class="qty-right">
                      {% if product.selected_or_first_available_variant.compare_at_price > product.selected_or_first_available_variant.price %}
                      <div class="price-from">de {{ product.selected_or_first_available_variant.compare_at_price | money }}</div>
                      {% endif %}
                      <div class="price-now" id="variant-price">{{ product.selected_or_first_available_variant.price | money }}</div>
                    </div>
                  </div>
                </label>
                
                <!-- Card 2 -->
                <label class="qty-card">
                  <input type="radio" name="quantity" value="2">
                  <div class="qty-card-body-col">
                    <div class="qty-title">{{ block.settings.qty2_title }}</div>
                    <div class="qty-benefits">
                      <div class="benefit-line">
                        <div class="benefit-left">
                          <div class="icon-check">
                            <div class="check-circle"></div>
                            <div class="check-mark"></div>
                        </div>
                          <span>{{ block.settings.qty2_info }}</span>
                        </div>
                        <div class="price-from">de R$ <s id="card2-price-old">--</s></div>
                      </div>
                      <div class="benefit-line">
                        <div class="benefit-left">
                          <div class="icon-check">
                            <div class="check-circle"></div>
                            <div class="check-mark"></div>
                        </div>
                          <span>Economize R$ <span id="card2-savings">--</span></span>
                        </div>
                        <div class="price-now">R$ <span id="card2-price-new">--</span></div>
                      </div>
                    </div>
                  </div>
                </label>
                
                <!-- Card 3 -->
                <label class="qty-card">
                  <input type="radio" name="quantity" value="3">
                  <div class="qty-card-body-col">
                    <div class="qty-header">
                      <div class="qty-title">{{ block.settings.qty3_title }}</div>
                      <div class="badge-free">{{ block.settings.qty3_badge }}</div>
                    </div>
                    <div class="qty-benefits">
                      <div class="benefit-line">
                        <div class="benefit-left">
                          <div class="icon-check">
                            <div class="check-circle"></div>
                            <div class="check-mark"></div>
                        </div>
                          <span>{{ block.settings.qty3_info }}</span>
                        </div>
                        <div class="price-from">de R$ <s id="card3-price-old">--</s></div>
                      </div>
                      <div class="benefit-line">
                        <div class="benefit-left">
                          <div class="icon-check">
                            <div class="check-circle"></div>
                            <div class="check-mark"></div>
                        </div>
                          <span>Economize R$ <span id="card3-savings">--</span></span>
                        </div>
                        <div class="price-now">R$ <span id="card3-price-new">--</span></div>
                      </div>
                    </div>
                  </div>
                </label>
                
              </div>
              
              <!-- Bot√£o de Compra -->
              <button type="submit" class="add-to-cart-btn">
                <span>{{ section.settings.button_text }}</span>
              </button>
            </div>
            
            {% when 'trust_badges' %}
            <!-- Badges de Confian√ßa (Block) -->
            <div class="trust-badges" {{ block.shopify_attributes }}>
              <div class="trust-badge">
                <div class="trust-icon">
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M1 3H5L7.68 14.39C7.77 14.76 8.1 15 8.47 15H18.5C18.9 15 19.25 14.74 19.34 14.35L21.34 6.35C21.42 6.01 21.18 5.69 20.84 5.69H7.5" stroke="#00C851" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    <circle cx="8" cy="20" r="2" stroke="#00C851" stroke-width="2"/>
                    <circle cx="18" cy="20" r="2" stroke="#00C851" stroke-width="2"/>
                    <path d="M8 20H18" stroke="#00C851" stroke-width="2"/>
                    <path d="M3 3L5 8" stroke="#00C851" stroke-width="2" stroke-linecap="round"/>
                  </svg>
                </div>
                <span>{{ block.settings.badge1_text }}</span>
              </div>
              
              <div class="trust-badge">
                <div class="trust-icon">
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M16 3H6C4.9 3 4 3.9 4 5V19C4 20.1 4.9 21 6 21H18C19.1 21 20 20.1 20 19V8L16 3Z" stroke="#00C851" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    <path d="M16 3V8H20" stroke="#00C851" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    <path d="M8 12H16" stroke="#00C851" stroke-width="2" stroke-linecap="round"/>
                    <path d="M8 16H12" stroke="#00C851" stroke-width="2" stroke-linecap="round"/>
                    <circle cx="18" cy="12" r="3" fill="#00C851"/>
                    <path d="M17 12L18 13L20 11" stroke="white" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                </div>
                <span>{{ block.settings.badge2_text }}</span>
              </div>
              
              <div class="trust-badge">
                <div class="trust-icon">
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M12 22S2 17.5 2 12V5L12 2L22 5V12C22 17.5 12 22 12 22Z" stroke="#00C851" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    <path d="M9 12L11 14L15 10" stroke="#00C851" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                </div>
                <span>{{ block.settings.badge3_text }}</span>
              </div>
            </div>
            
          {% endcase %}
        {% endfor %}
        
      </form>
    </div>
    
  </div>
</section>

<style>
/* Reset e Base */
* {
  box-sizing: border-box;
}

/* Garantir que n√£o h√° overflow horizontal */
body {
  overflow-x: hidden;
}

html {
  overflow-x: hidden;
}

.product-section-figma {
  width: 100%;
  padding: 80px 0;
  font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
  background: #FEFEFE;
  min-height: 100vh;
  overflow-x: hidden;
}

.product-container-figma {
  max-width: 1440px;
  margin: 0 auto;
  padding: 60px 100px;
  display: grid;
  grid-template-columns: 42% 58%;
  gap: 100px;
  align-items: start;
  background: #FFFFFF;
}

/* Galeria */
.product-gallery-col {
  display: flex;
  flex-direction: column;
  gap: 24px;
  position: sticky;
  top: 80px;
  padding: 0;
}

.product-image-main {
  width: 100%;
  aspect-ratio: 1 / 1;
  border-radius: 20px;
  overflow: hidden;
  background: linear-gradient(135deg, #FAFAFA 0%, #F5F5F5 100%);
  box-shadow: 0 4px 24px rgba(0, 0, 0, 0.04), 0 0 1px rgba(0, 0, 0, 0.04);
  border: 1px solid rgba(0, 0, 0, 0.03);
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
}

.product-image-main:hover {
  box-shadow: 0 4px 20px rgba(0,0,0,0.06);
}

.product-image-main img {
  width: 100% !important;
  height: 100% !important;
  max-width: 100%;
  max-height: 100%;
  object-fit: contain !important;
  object-position: center;
  image-rendering: high-quality;
  -webkit-backface-visibility: hidden;
  backface-visibility: hidden;
}

.image-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f0f0f0;
  color: #666;
}

.image-carousel {
  padding: 0;
  background: transparent;
  border-radius: 0;
  box-shadow: none;
  border: none;
}

.carousel-container {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10px;
  position: relative;
}

.carousel-track {
  display: flex;
  gap: 16px;
  overflow-x: auto;
  overflow-y: hidden;
  max-width: 100%;
  flex: 1;
  justify-content: flex-start;
  flex-wrap: nowrap;
  scroll-behavior: smooth;
  -webkit-overflow-scrolling: touch;
  padding: 4px 0;
}

.carousel-track::-webkit-scrollbar {
  height: 4px;
}

.carousel-track::-webkit-scrollbar-track {
  background: #f0f0f0;
  border-radius: 2px;
}

.carousel-track::-webkit-scrollbar-thumb {
  background: #F44027;
  border-radius: 2px;
}

.carousel-arrow {
  background: none;
  border: none;
  cursor: pointer;
  padding: 4px;
  border-radius: 8px;
  transition: all 0.3s ease;
  flex-shrink: 0;
}

.carousel-arrow:hover {
  transform: scale(1.1);
}

.carousel-arrow:disabled {
  opacity: 0.3;
  cursor: not-allowed;
}

.carousel-arrow svg {
  display: block;
  width: 24px;
  height: 24px;
}

.carousel-image-wrapper {
  flex-shrink: 0;
  width: 90px !important;
  height: 90px !important;
  min-width: 90px;
  min-height: 90px;
  max-width: 90px;
  max-height: 90px;
  cursor: pointer;
  transition: all 0.2s ease-out;
}

.carousel-image {
  width: 100% !important;
  height: 100% !important;
  aspect-ratio: 1 / 1;
  border-radius: 12px;
  overflow: hidden;
  background: #fff;
  border: 1px solid #e6e6e6;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease-out;
  position: relative;
}

.carousel-image-wrapper:hover .carousel-image {
  border-color: #d0d0d0;
  transform: scale(1.02);
}

.carousel-image-wrapper.active .carousel-image {
  border: 2px solid #ff6b4a;
  box-shadow: 0 4px 12px rgba(255, 107, 74, 0.2);
}

.carousel-image img {
  width: 100% !important;
  height: 100% !important;
  max-width: 100%;
  max-height: 100%;
  object-fit: contain !important;
  object-position: center;
  display: block;
}

.placeholder-image {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f0f0f0;
  color: #666;
}

