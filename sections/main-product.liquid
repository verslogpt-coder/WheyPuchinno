      const response = await fetch('/cart/add.js', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({
          id: variantId,
          quantity: quantity
        })
      });
      
      console.log('üì° Resposta HTTP:', response.status, response.statusText);

      const result = await response.json();
      console.log('üì¶ Resposta do carrinho:', result);
      
      if (response.ok) {
        // Produto adicionado com sucesso
        console.log('‚úÖ Produto adicionado com sucesso!');
        
        // Atualizar o carrinho se o CartDrawer existir
        if (window.cartDrawer) {
          await window.cartDrawer.refreshCart();
          window.cartDrawer.open();
          
          // Reabilitar bot√£o ap√≥s sucesso
          if (addBtn) {
            addBtn.disabled = false;
            addBtn.style.opacity = '1';
            addBtn.innerHTML = '<span>{{ section.settings.button_text }}</span>';
          }
        } else {
          // Fallback: redirecionar para o carrinho
          window.location.href = '/cart';
        }
        
      } else {
        // Erro ao adicionar
        console.error('‚ùå Erro ao adicionar:', result);
        
        if (result.message && result.message.includes('availability')) {
          alert('Quantidade solicitada n√£o est√° dispon√≠vel no estoque.');
        } else if (result.message) {
          alert('Erro: ' + result.message);
        } else {
          alert('Erro ao adicionar produto ao carrinho.');
        }
        
        // Reabilitar bot√£o
        if (addBtn) {
          addBtn.disabled = false;
          addBtn.style.opacity = '1';
          addBtn.innerHTML = '<span>{{ section.settings.button_text }}</span>';
        }
      }
    } catch (error) {
      console.error('‚ùå Erro na requisi√ß√£o:', error);
      alert('Erro ao adicionar produto ao carrinho. Tente novamente.');
      
      // Reabilitar bot√£o
      if (addBtn) {
        addBtn.disabled = false;
        addBtn.style.opacity = '1';
        addBtn.innerHTML = '<span>{{ section.settings.button_text }}</span>';
      }
    }
  }
  
  // Adicionar ao carrinho com AJAX
  const productForm = document.querySelector('.product-form-main');
  if (productForm) {
    productForm.addEventListener('submit', async function(e) {
      e.preventDefault();
      await handleAddToCart();
    });
  }

});
</script>

