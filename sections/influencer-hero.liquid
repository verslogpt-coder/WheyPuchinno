{% comment %}
  Hero da Página Influencer - Design do Figma
{% endcomment %}

<section class="influencer-hero" style="{% if section.settings.hero_height_desktop %}height: {{ section.settings.hero_height_desktop }}px;{% endif %}">
  <div class="influencer-hero-bg">
    {% if section.settings.background_image != blank %}
      <img 
        src="{{ section.settings.background_image | image_url: width: 2000 }}" 
        alt="Background"
        class="influencer-hero-bg-image"
      >
    {% else %}
      <img 
        src="{{ 'influencer-hero-bg.png' | asset_url }}" 
        alt="Background Influencer"
        class="influencer-hero-bg-image"
      >
    {% endif %}
    <div class="influencer-hero-overlay" style="{% if section.settings.overlay_opacity %}opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};{% endif %}"></div>
  </div>

  <div class="influencer-hero-content">
    <div class="influencer-hero-container">
      <!-- Logo -->
      {% if section.settings.show_logo %}
      <div class="influencer-logo">
        {% if section.settings.custom_logo != blank %}
          <img 
            src="{{ section.settings.custom_logo | image_url: width: 600 }}" 
            alt="Logo"
            width="300"
            height="60"
          >
        {% else %}
          <img 
            src="{{ 'influencer-logo.png' | asset_url }}" 
            alt="Wheypuccino"
            width="300"
            height="60"
          >
        {% endif %}
      </div>
      {% endif %}

      <!-- Texto Hero -->
      <div class="influencer-hero-text">
        <h1 class="influencer-hero-title">
          {{ section.settings.title_line_1 | default: 'FAÇA PARTE' }}<br>
          <span class="influencer-hero-title-bold">{{ section.settings.title_line_2 | default: 'DO LIFESTYLE WHEYPUCCINO' }}</span>
        </h1>

        <p class="influencer-hero-subtitle">
          {{ section.settings.subtitle | default: 'Seja embaixador de uma marca premium que une saúde, energia e sabor.' }}
        </p>
      </div>
    </div>
  </div>
</section>

<style>
/* Hero Influencer */
.influencer-hero {
  position: relative;
  width: 100%;
  height: 881px;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
}

.influencer-hero-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.influencer-hero-bg-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  object-position: center;
}

.influencer-hero-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, 
    rgba(0, 0, 0, 0) 0%, 
    rgba(0, 0, 0, 0.45) 32.32%, 
    rgba(0, 0, 0, 1) 100%
  );
  opacity: 0.56;
}

.influencer-hero-content {
  position: relative;
  z-index: 2;
  width: 100%;
  max-width: 1920px;
  padding: 0 153px;
}

.influencer-hero-container {
  display: flex;
  flex-direction: column;
  gap: 49px;
  max-width: 620px;
}

/* Logo */
.influencer-logo {
  width: 300px;
  height: 60px;
}

.influencer-logo img {
  width: 100%;
  height: 100%;
  object-fit: contain;
}

/* Texto */
.influencer-hero-text {
  display: flex;
  flex-direction: column;
  gap: 49px;
}

.influencer-hero-title {
  font-family: 'Kayak Sans', 'Inter', sans-serif;
  font-size: 76px;
  font-weight: 300;
  line-height: 80px;
  letter-spacing: 0px;
  text-transform: uppercase;
  color: #FFFFFF;
  margin: 0;
}

.influencer-hero-title-bold {
  font-weight: 700;
}

.influencer-hero-subtitle {
  font-family: 'Kayak Sans', 'Inter', sans-serif;
  font-size: 42px;
  font-weight: 300;
  line-height: 44px;
  letter-spacing: 0px;
  color: #FFFFFF;
  margin: 0;
  max-width: 524px;
}

.influencer-subtitle-light {
  font-weight: 300;
}

.influencer-subtitle-regular {
  font-weight: 400;
}

/* Responsivo Mobile */
@media (max-width: 768px) {
  .influencer-hero {
    height: 320px;
    min-height: 320px;
    max-height: 320px;
    overflow: hidden;
    position: relative;
  }

  .influencer-hero-bg {
    height: 100%;
  }

  .influencer-hero-content {
    padding: 35px 20px;
    width: 100%;
    max-width: 100%;
    box-sizing: border-box;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: flex-start;
  }

  .influencer-hero-container {
    gap: 18px;
    max-width: 100%;
    width: 100%;
    box-sizing: border-box;
  }

  .influencer-logo {
    width: 140px;
    height: auto;
  }

  .influencer-logo img {
    width: 100%;
    height: auto;
    object-fit: contain;
  }

  .influencer-hero-text {
    gap: 12px;
    width: 100%;
    max-width: 100%;
  }

  .influencer-hero-title {
    font-size: 24px;
    line-height: 30px;
    word-wrap: break-word;
    overflow-wrap: break-word;
    width: 100%;
    max-width: 100%;
    hyphens: auto;
  }

  .influencer-hero-subtitle {
    font-size: 14px;
    line-height: 20px;
    max-width: 100%;
    width: 100%;
    word-wrap: break-word;
    overflow-wrap: break-word;
  }

  .influencer-subtitle-light,
  .influencer-subtitle-regular {
    display: inline;
  }

  .influencer-hero-bg-image {
    object-position: center center;
    object-fit: cover;
    transform: scale(1.1);
  }

  .influencer-hero-overlay {
    background: linear-gradient(90deg, 
      rgba(0, 0, 0, 0.4) 0%, 
      rgba(0, 0, 0, 0.65) 50%, 
      rgba(0, 0, 0, 0.85) 100%
    );
    opacity: 0.75;
  }
}

/* Responsivo Tablet */
@media (max-width: 1024px) and (min-width: 769px) {
  .influencer-hero {
    height: 700px;
  }

  .influencer-hero-content {
    padding: 0 40px;
  }

  .influencer-logo {
    width: 250px;
    height: 50px;
  }

  .influencer-hero-title {
    font-size: 56px;
    line-height: 60px;
  }

  .influencer-hero-subtitle {
    font-size: 32px;
    line-height: 36px;
  }
}

/* Responsivo Desktop Pequeno */
@media (max-width: 1440px) and (min-width: 1025px) {
  .influencer-hero-content {
    padding: 0 80px;
  }
}
</style>

{% schema %}
{
  "name": "Hero Influencer",
  "settings": [
    {
      "type": "header",
      "content": "Imagens"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Imagem de Fundo",
      "info": "Recomendado: 1920x900px"
    },
    {
      "type": "checkbox",
      "id": "show_logo",
      "label": "Mostrar Logo",
      "default": true
    },
    {
      "type": "image_picker",
      "id": "custom_logo",
      "label": "Logo Customizado (opcional)",
      "info": "Se não selecionar, usará o logo padrão"
    },
    {
      "type": "header",
      "content": "Textos"
    },
    {
      "type": "text",
      "id": "title_line_1",
      "label": "Título - Linha 1",
      "default": "FAÇA PARTE"
    },
    {
      "type": "text",
      "id": "title_line_2",
      "label": "Título - Linha 2 (em negrito)",
      "default": "DO LIFESTYLE WHEYPUCCINO"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subtítulo",
      "default": "Seja embaixador de uma marca premium que une saúde, energia e sabor."
    },
    {
      "type": "header",
      "content": "Configurações Visuais"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "label": "Opacidade do Overlay",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 55,
      "unit": "%"
    },
    {
      "type": "range",
      "id": "hero_height_desktop",
      "label": "Altura no Desktop (px)",
      "min": 600,
      "max": 1200,
      "step": 50,
      "default": 900
    },
    {
      "type": "paragraph",
      "content": "No mobile, o banner mantém proporção de 1080x1350px automaticamente."
    }
  ],
  "presets": [
    {
      "name": "Hero Influencer"
    }
  ]
}
{% endschema %}

