  window.addEventListener('load', updatePrices);
  
  // Fun√ß√£o para adicionar ao carrinho
  async function handleAddToCart() {
    const addBtn = document.querySelector('.add-to-cart-btn');
    const quantitySelected = document.querySelector('input[name="quantity"]:checked');
    const quantity = quantitySelected ? parseInt(quantitySelected.value) : 1;
    const maxQty = {{ section.settings.combo_max_qty | default: 3 }};

    if (!quantity || quantity < 1) {
      alert('Por favor, selecione uma quantidade v√°lida.');
      return;
    }
    // limite segue v√°lido para combos futuros, mas aqui n√£o aplicamos combo

    // Desabilitar bot√£o durante a requisi√ß√£o
    if (addBtn) {
      addBtn.disabled = true;
      addBtn.style.opacity = '0.6';
      addBtn.innerHTML = '<span>Adicionando ' + quantity + ' un...</span>';
    }

    try {
        const variantId = document.getElementById('variant-id').value;
      if (!variantId) { alert('Por favor, selecione os sabores.'); return; }
      const payload = { id: parseInt(variantId, 10), quantity };

      const response = await fetch('/cart/add.js', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(payload)
      });

      const result = await response.json();
      if (response.ok) {
        if (window.cartDrawer) {
          await window.cartDrawer.refreshCart();
          window.cartDrawer.open();
        } else {
          window.location.href = '/cart';
        }
      } else {
        console.error('‚ùå Erro ao adicionar:', result);
        if (result && result.message) alert('Erro: ' + result.message);
        else alert('Erro ao adicionar produto ao carrinho.');
      }
    } catch (error) {
      console.error('‚ùå Erro na requisi√ß√£o:', error);
      alert('Erro ao adicionar produto ao carrinho. Tente novamente.');
    } finally {
      if (addBtn) {
        addBtn.disabled = false;
        addBtn.style.opacity = '1';
        addBtn.innerHTML = '<span>{{ section.settings.button_text }}</span>';
      }
    }
  }
  
  // Adicionar ao carrinho com AJAX
  const productForm = document.querySelector('.product-form-main');
  if (productForm) {
    productForm.addEventListener('submit', async function(e) {
      e.preventDefault();
      await handleAddToCart();
    });
  }

  // Ver mais / Ver menos da descri√ß√£o
  const descWrapper = document.getElementById('product-desc');
  const descToggle = document.getElementById('product-desc-toggle');
  if (descWrapper && descToggle) {
