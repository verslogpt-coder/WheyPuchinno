  // Sele√ß√£o de quantidade com c√°lculo autom√°tico
  const quantityRadios = document.querySelectorAll('input[name="quantity"]');
  
  function updatePrices() {
    // Usar sempre o pre√ßo base do produto, independente das variantes selecionadas
    const basePrice = {{ product.selected_or_first_available_variant.price | divided_by: 100.0 }};

    // Descontos das op√ß√µes de quantidade (usa settings j√° existentes)
    const discount2 = {{ section.settings.qty2_discount | default: 8 }};
    const discount3 = {{ section.settings.qty3_discount | default: 12 }};

    const price1 = basePrice;
    const price2Normal = basePrice * 2;
    const price2Total = price2Normal * (1 - (Number(discount2) / 100));
    const savings2 = price2Normal - price2Total;
    const price3Normal = basePrice * 3;
    const price3Total = price3Normal * (1 - (Number(discount3) / 100));
    const savings3 = price3Normal - price3Total;

    function formatPrice(price) { return Number(price || 0).toFixed(2).replace('.', ','); }

    const variantPriceDisplay = document.getElementById('variant-price');
    if (variantPriceDisplay) { variantPriceDisplay.textContent = 'R$ ' + formatPrice(price1); }

    const card2Old = document.getElementById('card2-price-old');
    const card2New = document.getElementById('card2-price-new');
    const card2Savings = document.getElementById('card2-savings');
    if (card2Old) card2Old.textContent = formatPrice(price2Normal);
    if (card2New) card2New.textContent = formatPrice(price2Total);
    if (card2Savings) card2Savings.textContent = formatPrice(savings2);

    const card3Old = document.getElementById('card3-price-old');
    const card3New = document.getElementById('card3-price-new');
    const card3Savings = document.getElementById('card3-savings');
    if (card3Old) card3Old.textContent = formatPrice(price3Normal);
    if (card3New) card3New.textContent = formatPrice(price3Total);
    if (card3Savings) card3Savings.textContent = formatPrice(savings3);
  }
  
  // Configurar sele√ß√£o de quantidade
  quantityRadios.forEach(radio => {
    radio.addEventListener('change', function() {
      if (this.checked) {
        console.log('‚úÖ Quantidade selecionada:', this.value);
        
        // Atualizar visual dos cards
        document.querySelectorAll('.qty-card').forEach(card => {
          card.classList.remove('selected');
        });
        this.closest('.qty-card').classList.add('selected');
        
        // Atualizar pre√ßos
        updatePrices();
        
        // Verificar estoque
        const quantity = parseInt(this.value);
        checkStockAvailability(quantity);
      }
    });
  });
  
  // Adicionar evento de click nos labels dos cards para garantir que funcione
  document.querySelectorAll('.qty-card').forEach(card => {
    card.addEventListener('click', function(e) {
      // N√£o fazer nada se clicou no input
      if (e.target.type === 'radio') return;
      
      const radio = this.querySelector('input[type="radio"]');
      if (radio) {
        radio.checked = true;
        radio.dispatchEvent(new Event('change'));
        console.log('üìå Card clicado, quantidade:', radio.value);
      }
    });
  });
  
  // Fun√ß√£o para verificar disponibilidade de estoque
  async function checkStockAvailability(quantity) {
    try {
      const variantIdInput = document.getElementById('variant-id');
      const variantId = variantIdInput ? variantIdInput.value : null;
      
      if (!variantId) return;
      
      // Buscar informa√ß√µes da variante
      const response = await fetch(`/products/{{ product.handle }}.js`);
      if (response.ok) {
        const product = await response.json();
        const variant = product.variants.find(v => v.id == variantId);
        
        if (variant && variant.inventory_quantity !== null) {
          const availableStock = variant.inventory_quantity;
          console.log('üì¶ Estoque dispon√≠vel:', availableStock, 'Solicitado:', quantity);
          
          if (quantity > availableStock) {
            // Desabilitar bot√£o de compra e mostrar aviso
            const addToCartBtn = document.querySelector('.add-to-cart-btn');
            if (addToCartBtn) {
              addToCartBtn.disabled = true;
              addToCartBtn.style.opacity = '0.5';
              addToCartBtn.style.cursor = 'not-allowed';
              addToCartBtn.innerHTML = `<span>Apenas ${availableStock} dispon√≠vel(is)</span>`;
              
              // Remover event listener para prevenir clique
              addToCartBtn.onclick = null;
            }
            
            // Mostrar notifica√ß√£o
            showStockWarning(availableStock, quantity);
          } else {
            // Reabilitar bot√£o de compra
            const addToCartBtn = document.querySelector('.add-to-cart-btn');
            if (addToCartBtn) {
              addToCartBtn.disabled = false;
              addToCartBtn.style.opacity = '1';
              addToCartBtn.style.cursor = 'pointer';
              addToCartBtn.innerHTML = `<span>{{ section.settings.button_text }}</span>`;
              
              // Restaurar event listener
              addToCartBtn.onclick = function(e) {
                e.preventDefault();
                handleAddToCart();
              };
            }
            
            // Remover avisos anteriores
            const existingWarning = document.querySelector('.stock-warning');
            if (existingWarning) {
              existingWarning.remove();
            }
          }
        }
      }
    } catch (error) {
      console.error('‚ùå Erro ao verificar estoque:', error);
    }
  }
  
  // Fun√ß√£o para mostrar aviso de estoque
  function showStockWarning(available, requested) {
    // Remover avisos anteriores
    const existingWarning = document.querySelector('.stock-warning');
    if (existingWarning) {
      existingWarning.remove();
    }
    
    // Criar aviso
    const warning = document.createElement('div');
    warning.className = 'stock-warning';
    warning.innerHTML = `
