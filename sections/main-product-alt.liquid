{% comment %}
  Se√ß√£o Principal do Produto - Design Original
{% endcomment %}

{{ 'https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap' | stylesheet_tag }}

<section class="product-section-figma" data-product-id="{{ product.id }}">
  <div class="product-container-figma">
    
    <!-- Coluna Esquerda: Galeria -->
    <div class="product-gallery-col">
      <!-- Imagem Principal -->
      <div class="product-image-main">
        {% if product.featured_media %}
          <img 
            id="main-product-image"
            src="{{ product.featured_media | image_url: width: 1200 }}" 
            alt="{{ product.title }}"
            loading="eager"
          >
        {% else %}
          <div class="image-placeholder">
            <svg width="120" height="120" viewBox="0 0 24 24" fill="none">
              <rect x="3" y="3" width="18" height="18" rx="2" stroke="#E0E0E0" stroke-width="2"/>
            </svg>
          </div>
        {% endif %}
      </div>
      
      <!-- Carousel de Miniaturas - NAVEGA√á√ÉO FUNCIONAL -->
      <div class="image-carousel">
        <div class="carousel-container">
          {% if product.media.size > 1 %}
          <button class="carousel-arrow prev" onclick="carouselPrev()">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <rect width="24" height="24" rx="8" fill="#F44027"/>
              <path d="M14 8L10 12L14 16" stroke="#FFFCFC" stroke-width="1.2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </button>
          {% endif %}
          
          <div class="carousel-track" id="carousel-track">
            <!-- Mostrar TODAS as imagens do produto -->
            {% for media in product.media %}
            <div class="carousel-image {% if forloop.index == 1 %}active{% endif %}" 
                 data-image="{{ media | image_url: width: 1200 }}">
              <img src="{{ media | image_url: width: 200 }}" alt="{{ media.alt }}" loading="lazy">
            </div>
            {% endfor %}
            
            <!-- Se n√£o h√° imagens, mostrar placeholder -->
            {% if product.media.size == 0 %}
            <div class="carousel-image active">
              <div class="placeholder-image">
                <svg width="60" height="60" viewBox="0 0 24 24" fill="none">
                  <rect x="3" y="3" width="18" height="18" rx="2" stroke="#E0E0E0" stroke-width="2"/>
                </svg>
              </div>
            </div>
            {% endif %}
          </div>
          
          {% if product.media.size > 1 %}
          <button class="carousel-arrow next" onclick="carouselNext()">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <rect width="24" height="24" rx="8" fill="#F44027"/>
              <path d="M10 16L14 12L10 8" stroke="#FFFCFC" stroke-width="1.2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </button>
          {% endif %}
        </div>
      </div>
    </div>
    
    <!-- Coluna Direita: Informa√ß√µes -->
    <div class="product-info-col">
      
      <!-- Rating e T√≠tulo -->
      <div class="product-header">
        <div class="product-rating">
          <div class="rating-stars">
            <span class="star">‚òÖ</span>
            <span class="star">‚òÖ</span>
            <span class="star">‚òÖ</span>
            <span class="star">‚òÖ</span>
            <span class="star">‚òÖ</span>
            </div>
          <div class="rating-divider"></div>
          <span class="rating-count">{{ section.settings.rating_count }}</span>
        </div>
        <h1 class="product-title">{{ product.title }}</h1>
        <div class="product-desc" id="product-desc">
          <div class="product-desc__content">
            {{ product.description }}
          </div>
          <button type="button" class="product-desc__toggle" id="product-desc-toggle" aria-expanded="false" aria-controls="product-desc">
            Ver mais
          </button>
        </div>
      </div>
      
      <form class="product-form-main" action="/cart/add" method="post" enctype="multipart/form-data" id="product-form-{{ product.id }}">
        <input type="hidden" name="id" id="variant-id" value="{{ product.selected_or_first_available_variant.id }}">
        <!-- IDs das variantes do combo -->
        <input type="hidden" id="whey-variant-id" value="">
        <input type="hidden" id="choc-variant-id" value="">
        
        <!-- Seletor de Sabor/Variante -->
        {% liquid
          assign whey_index = 0
          assign caps_index = 0
          for opt in product.options
            assign name_down = opt | downcase
            if name_down contains 'whey'
              assign whey_index = forloop.index
            elsif name_down contains 'chococaps' or name_down contains 'choco'
              assign caps_index = forloop.index
            endif
          endfor
        %}

        {% if whey_index > 0 and caps_index > 0 %}
          {% assign whey_key = 'option1' %}
          {% if whey_index == 2 %}{% assign whey_key = 'option2' %}{% elsif whey_index == 3 %}{% assign whey_key = 'option3' %}{% endif %}
          {% assign caps_key = 'option1' %}
          {% if caps_index == 2 %}{% assign caps_key = 'option2' %}{% elsif caps_index == 3 %}{% assign caps_key = 'option3' %}{% endif %}

          <!-- Op√ß√£o 1: Sabor Whey -->
          <div class="flavor-selector">
            <div class="flavor-grid-header">
              <div class="flavor-label">Sabor Whey</div>
              {% if section.settings.flavor_help_link != blank %}
                <a class="flavor-help" href="{{ section.settings.flavor_help_link }}" target="_blank" rel="noopener">{{ section.settings.flavor_help_text }}</a>
              {% endif %}
            </div>
            <div class="flavor-grid">
              {% assign whey_values = '' %}
              {% for v in product.variants %}
                {% assign val = v[whey_key] %}
                {% unless whey_values contains val %}
                  {% assign flavor_color = section.settings.flavor_default_color %}
                  <button type="button"
                          class="flavor-card {% if forloop.first %}active{% endif %}"
                          data-group="whey"
                          data-value="{{ val }}"
                          data-variant-price="{{ v.price | money_without_currency }}"
                          {% if v.featured_media %}
                            data-image="{{ v.featured_media | image_url: width: 1200 }}"
                          {% endif %}
                          style="--flavor-color: {{ flavor_color | default: '#ECECEC' }}">
                    <div class="flavor-card-top">
                      {% if v.featured_media %}
                        <img src="{{ v.featured_media | image_url: width: 80 }}" alt="{{ val }}">
                      {% endif %}
                    </div>
                    <div class="flavor-card-label">{{ val }}</div>
                  </button>
                  {% assign whey_values = whey_values | append: '|' | append: val %}
                {% endunless %}
              {% endfor %}
            </div>
          </div>

          <!-- Op√ß√£o 2: Sabor ChocoCaps -->
          <div class="flavor-selector">
            <div class="flavor-grid-header">
              <div class="flavor-label">Sabor ChocoCaps</div>
            </div>
            <div class="flavor-grid">
              {% assign caps_values = '' %}
              {% for v in product.variants %}
                {% assign val = v[caps_key] %}
                {% unless caps_values contains val %}
                  {% assign flavor_color = section.settings.flavor_default_color %}
                  <button type="button"
                          class="flavor-card {% if forloop.first %}active{% endif %}"
                          data-group="caps"
                          data-value="{{ val }}"
                          data-variant-price="{{ v.price | money_without_currency }}"
                          {% if v.featured_media %}
                            data-image="{{ v.featured_media | image_url: width: 1200 }}"
                          {% endif %}
                          style="--flavor-color: {{ flavor_color | default: '#ECECEC' }}">
                    <div class="flavor-card-top">
                      {% if v.featured_media %}
                        <img src="{{ v.featured_media | image_url: width: 80 }}" alt="{{ val }}">
                      {% endif %}
                    </div>
                    <div class="flavor-card-label">{{ val }}</div>
                  </button>
                  {% assign caps_values = caps_values | append: '|' | append: val %}
                {% endunless %}
              {% endfor %}
            </div>
          </div>
        {% elsif product.has_only_default_variant == false %}
          <!-- MODO SIMPLES: seletor de sabores do produto atual -->
          <div class="flavor-selector">
            <div class="flavor-grid-header">
              <div class="flavor-label">Sabor</div>
              {% if section.settings.flavor_help_link != blank %}
                <a class="flavor-help" href="{{ section.settings.flavor_help_link }}" target="_blank" rel="noopener">{{ section.settings.flavor_help_text }}</a>
              {% endif %}
            </div>
            <div class="flavor-grid">
              {% assign first_variant = true %}
              {% for variant in product.variants %}
                {% if variant.available %}
                  {% assign variant_title_down = variant.title | downcase %}
                  {% assign flavor_color = section.settings.flavor_default_color %}
                  {% for block in section.blocks %}
                    {% if block.type == 'flavor_style' %}
                      {% assign block_title_down = block.settings.flavor_name | downcase %}
                      {% if block_title_down == variant_title_down %}
                        {% assign flavor_color = block.settings.flavor_color %}
                      {% endif %}
                    {% endif %}
                  {% endfor %}
                  <button type="button"
                          class="flavor-card {% if first_variant %}active{% endif %}"
                          data-variant-id="{{ variant.id }}"
                          data-variant-price="{{ variant.price | money_without_currency }}"
                          {% if variant.featured_media %}
                            data-image="{{ variant.featured_media | image_url: width: 1200 }}"
                          {% elsif variant.image %}
                            data-image="{{ variant.image | image_url: width: 1200 }}"
                          {% endif %}
                          style="--flavor-color: {{ flavor_color | default: '#ECECEC' }}">
                    <div class="flavor-card-top">
                      {% if variant.featured_media %}
                        <img src="{{ variant.featured_media | image_url: width: 80 }}" alt="{{ variant.title }}">
                      {% elsif variant.image %}
                        <img src="{{ variant.image | image_url: width: 80 }}" alt="{{ variant.title }}">
                      {% endif %}
                    </div>
                    <div class="flavor-card-label">{{ variant.title }}</div>
                    <div class="flavor-card-price">R$ {{ variant.price | money_without_currency }}</div>
                  </button>
                  {% assign first_variant = false %}
                {% endif %}
              {% endfor %}
            </div>
          </div>
        {% else %}
          <!-- FALLBACK: Se n√£o h√° produtos configurados ou variantes -->
          <div class="flavor-selector">
            <div class="flavor-grid-header">
              <div class="flavor-label">Produto</div>
            </div>
            <div class="flavor-grid">
              <button type="button" class="flavor-card active" data-variant-id="{{ product.selected_or_first_available_variant.id }}" data-variant-price="{{ product.selected_or_first_available_variant.price | money_without_currency }}" style="--flavor-color: #ECECEC">
                <div class="flavor-card-top">
                  {% if product.featured_media %}
                    <img src="{{ product.featured_media | image_url: width: 80 }}" alt="{{ product.title }}">
                  {% endif %}
                </div>
                <div class="flavor-card-label">{{ product.title }}</div>
              </button>
            </div>
          </div>
        {% endif %}
        
        <!-- Cards de Quantidade -->
        <div class="quantity-options">
          
          <!-- Card 1 -->
          <label class="qty-card">
            <input type="radio" name="quantity" value="1" checked>
            <div class="qty-card-body">
              <div class="qty-left">
                <div class="qty-title">{{ section.settings.qty1_title }}</div>
                <div class="qty-info">
                  <div class="icon-check">
                    <div class="check-circle"></div>
                    <div class="check-mark"></div>
                  </div>
                  <span>{{ section.settings.qty1_info }}</span>
                </div>
              </div>
              <div class="qty-right">
                {% if product.selected_or_first_available_variant.compare_at_price > product.selected_or_first_available_variant.price %}
                <div class="price-from">de {{ product.selected_or_first_available_variant.compare_at_price | money }}</div>
                {% endif %}
                <div class="price-now" id="variant-price">{{ product.selected_or_first_available_variant.price | money }}</div>
              </div>
            </div>
          </label>
          
          <!-- Card 2 -->
          {% if section.settings.combo_max_qty >= 2 %}
          <label class="qty-card">
            <input type="radio" name="quantity" value="2">
            <div class="qty-card-body-col">
              <div class="qty-title">{{ section.settings.qty2_title }}</div>
              <div class="qty-benefits">
                <div class="benefit-line">
                  <div class="benefit-left">
                    <div class="icon-check">
                      <div class="check-circle"></div>
                      <div class="check-mark"></div>
                  </div>
                    <span>{{ section.settings.qty2_info }}</span>
                  </div>
                  <div class="price-from">de R$ <s id="card2-price-old">--</s></div>
                </div>
                <div class="benefit-line">
                  <div class="benefit-left">
                    <div class="icon-check">
                      <div class="check-circle"></div>
                      <div class="check-mark"></div>
                  </div>
                    <span>Economize R$ <span id="card2-savings">--</span></span>
                  </div>
                  <div class="price-now">R$ <span id="card2-price-new">--</span></div>
                </div>
              </div>
            </div>
          </label>
          {% endif %}

          <script>
          (function(){
            const form = document.getElementById('product-form-{{ product.id }}');
            const variants = {{ product.variants | json }};
            const optionsOrder = {{ product.options | json }};
            const wheyIndex = (optionsOrder.findIndex(n => /whey/i.test(n)) + 1) || 0;
            const capsIndex = (optionsOrder.findIndex(n => /choco/i.test(n)) + 1) || 0;
            const getOpt = (v, idx) => idx === 1 ? v.option1 : (idx === 2 ? v.option2 : (idx === 3 ? v.option3 : null));
            const findVariant = (wheyVal, capsVal) => {
              return variants.find(v =>
                (!wheyIndex || getOpt(v, wheyIndex) === wheyVal) &&
                (!capsIndex || getOpt(v, capsIndex) === capsVal) && v.available
              ) || variants.find(v => v.available) || variants[0];
            };

            function formatMoney(n){
              try { return (Number(n||0)).toFixed(2).replace('.', ','); } catch(e){ return n; }
            }

            // Fun√ß√£o para verificar limites por variante (desabilitada temporariamente)
            function checkVariantLimits(variantId) {
              // Funcionalidade desabilitada temporariamente devido a problemas de sintaxe
              return;
            }

            function updatePrices(){
              // Usar sempre o pre√ßo base do produto, independente das variantes selecionadas
              const base = {{ product.selected_or_first_available_variant.price | divided_by: 100.0 }};

              // Atualizar variante selecionada baseada nas escolhas de sabor
              const cardWhey = document.querySelector('.flavor-card[data-group="whey"].active');
              const cardCaps = document.querySelector('.flavor-card[data-group="caps"].active');
              const wheyVal = cardWhey ? cardWhey.dataset.value : null;
              const capsVal = cardCaps ? cardCaps.dataset.value : null;
              const current = findVariant(wheyVal, capsVal);
              
              const variantIdInput = document.getElementById('variant-id');
              if(variantIdInput && current){ 
                variantIdInput.value = current.id;
                // Verificar limites da variante selecionada
                checkVariantLimits(current.id);
              }

              const variantPriceEl = document.getElementById('variant-price');
              if(variantPriceEl){ variantPriceEl.textContent = formatMoney(base); }
              const card1New = document.getElementById('card1-price-new');
              if(card1New){ card1New.textContent = formatMoney(base); }

              const card2New = document.getElementById('card2-price-new');
              const card2Old = document.getElementById('card2-price-old');
              const card2Save = document.getElementById('card2-savings');
              const disc2 = {{ section.settings.qty2_discount_percent | default: 10 }};
              if(card2New){
                const total2 = base * 2;
                const new2 = total2 * (1 - (Number(disc2)/100));
                if(card2Old) card2Old.textContent = formatMoney(total2);
                card2New.textContent = formatMoney(new2);
                if(card2Save) card2Save.textContent = formatMoney(total2 - new2);
              }

              const card3New = document.getElementById('card3-price-new');
              const card3Old = document.getElementById('card3-price-old');
              const card3Save = document.getElementById('card3-savings');
              const disc3 = {{ section.settings.qty3_discount_percent | default: 20 }};
              if(card3New){
                const total3 = base * 3;
                const new3 = total3 * (1 - (Number(disc3)/100));
                if(card3Old) card3Old.textContent = formatMoney(total3);
                card3New.textContent = formatMoney(new3);
                if(card3Save) card3Save.textContent = formatMoney(total3 - new3);
              }
            }

            function selectCard(btn){
              const group = btn.dataset.group || 'single';
              const groupSelector = group === 'single' ? '.flavor-card:not([data-group])' : `.flavor-card[data-group="${group}"]`;
              document.querySelectorAll(groupSelector).forEach(function(el){ el.classList.remove('active'); });
              btn.classList.add('active');
              const cardWhey = document.querySelector('.flavor-card[data-group="whey"].active');
              const cardCaps = document.querySelector('.flavor-card[data-group="caps"].active');
              const wheyVal = cardWhey ? cardWhey.dataset.value : null;
              const capsVal = cardCaps ? cardCaps.dataset.value : null;
              const current = findVariant(wheyVal, capsVal);
              const input = document.getElementById('variant-id');
              if(input && current){ 
                input.value = current.id;
                // Verificar limites da nova variante selecionada
                checkVariantLimits(current.id);
              }
              const img = btn.dataset.image;
              const mainImg = document.getElementById('main-product-image');
              if(img && mainImg){ mainImg.src = img; }
              updatePrices();
            }

            document.querySelectorAll('.flavor-card').forEach(function(btn){
              btn.addEventListener('click', function(){ selectCard(btn); });
            });

            // Inicializar valores padr√£o para combo
            const wheyFirstCard = document.querySelector('.flavor-card[data-group="whey"].active');
            const capsFirstCard = document.querySelector('.flavor-card[data-group="caps"].active');
            if(wheyFirstCard) {
              const wheyInput = document.getElementById('whey-variant-id');
              if(wheyInput) wheyInput.value = wheyFirstCard.dataset.variantId;
            }
            if(capsFirstCard) {
              const capsInput = document.getElementById('choc-variant-id');
              if(capsInput) capsInput.value = capsFirstCard.dataset.variantId;
            }

            const qtyRadios = document.querySelectorAll('input[name="quantity"]');
            qtyRadios.forEach(function(r){ r.addEventListener('change', updatePrices); });

            // Verificar limites na inicializa√ß√£o
            const initialVariantId = document.getElementById('variant-id').value;
            if(initialVariantId) {
              checkVariantLimits(initialVariantId);
            }

            updatePrices();

            if(form){
              form.addEventListener('submit', function(e){
                // comportamento padr√£o: adicionar a variante resolvida
                const variantId = document.getElementById('variant-id') && document.getElementById('variant-id').value;
                if(!variantId){ e.preventDefault(); alert('Selecione os sabores Whey e ChocoCaps.'); }
              }, { passive: false });
            }
          })();
          </script>
          
          <!-- Card 3 -->
          {% if section.settings.combo_max_qty >= 3 %}
          <label class="qty-card">
            <input type="radio" name="quantity" value="3">
            <div class="qty-card-body-col">
              <div class="qty-header">
                <div class="qty-title">{{ section.settings.qty3_title }}</div>
                <div class="badge-free">{{ section.settings.qty3_badge }}</div>
              </div>
              <div class="qty-benefits">
                <div class="benefit-line">
                  <div class="benefit-left">
                    <div class="icon-check">
                      <div class="check-circle"></div>
                      <div class="check-mark"></div>
                  </div>
                    <span>{{ section.settings.qty3_info }}</span>
                  </div>
                  <div class="price-from">de R$ <s id="card3-price-old">--</s></div>
                </div>
                <div class="benefit-line">
                  <div class="benefit-left">
                    <div class="icon-check">
                      <div class="check-circle"></div>
                      <div class="check-mark"></div>
                  </div>
                    <span>Economize R$ <span id="card3-savings">--</span></span>
                  </div>
                  <div class="price-now">R$ <span id="card3-price-new">--</span></div>
                </div>
              </div>
            </div>
          </label>
          {% endif %}
          
        </div>
        
        <!-- Bot√£o de Compra -->
        <button type="submit" class="add-to-cart-btn">
          <span>{{ section.settings.button_text }}</span>
          </button>
          
        <!-- Badges de Confian√ßa -->
        <div class="trust-badges">
          <div class="trust-badge">
            <div class="trust-icon">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M1 3H5L7.68 14.39C7.77 14.76 8.1 15 8.47 15H18.5C18.9 15 19.25 14.74 19.34 14.35L21.34 6.35C21.42 6.01 21.18 5.69 20.84 5.69H7.5" stroke="#00C851" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                <circle cx="8" cy="20" r="2" stroke="#00C851" stroke-width="2"/>
                <circle cx="18" cy="20" r="2" stroke="#00C851" stroke-width="2"/>
                <path d="M8 20H18" stroke="#00C851" stroke-width="2"/>
                <path d="M3 3L5 8" stroke="#00C851" stroke-width="2" stroke-linecap="round"/>
              </svg>
            </div>
            <span>{{ section.settings.badge1_text }}</span>
          </div>
          
          <div class="trust-badge">
            <div class="trust-icon">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M16 3H6C4.9 3 4 3.9 4 5V19C4 20.1 4.9 21 6 21H18C19.1 21 20 20.1 20 19V8L16 3Z" stroke="#00C851" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                <path d="M16 3V8H20" stroke="#00C851" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                <path d="M8 12H16" stroke="#00C851" stroke-width="2" stroke-linecap="round"/>
                <path d="M8 16H12" stroke="#00C851" stroke-width="2" stroke-linecap="round"/>
                <circle cx="18" cy="12" r="3" fill="#00C851"/>
                <path d="M17 12L18 13L20 11" stroke="white" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </div>
            <span>{{ section.settings.badge2_text }}</span>
          </div>
          
          <div class="trust-badge">
            <div class="trust-icon">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M12 22S2 17.5 2 12V5L12 2L22 5V12C22 17.5 12 22 12 22Z" stroke="#00C851" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                <path d="M9 12L11 14L15 10" stroke="#00C851" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </div>
            <span>{{ section.settings.badge3_text }}</span>
          </div>
        </div>
        
      </form>
    </div>
    
  </div>
</section>

<style>
/* Reset e Base */
* {
  box-sizing: border-box;
}

/* Garantir que n√£o h√° overflow horizontal */
body {
  overflow-x: hidden;
}

html {
  overflow-x: hidden;
}

.product-section-figma {
  width: 100%;
  padding: 60px 0;
  font-family: 'Inter', sans-serif;
  background: linear-gradient(135deg, #FAFAFA 0%, #F5F5F5 100%);
  min-height: 100vh;
  overflow-x: hidden;
}

.product-container-figma {
  max-width: 1280px;
  margin: 0 auto;
  padding: 0 40px;
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 60px;
  align-items: start;
}

/* Galeria */
.product-gallery-col {
  display: flex;
  flex-direction: column;
  gap: 24px;
  position: sticky;
