            <path d="M11.6284 12.1321L10.4995 14.9332H13.5008L12.3719 17.7343" stroke="#61A1CD" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M18.9874 22.321H5.0415" stroke="#61A1CD" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M18.0946 7.69303H5.90527" stroke="#61A1CD" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M17.5026 3.72868H6.49805" stroke="#61A1CD" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </div>
        <span class="prepare-text">Prepare-se</span>
      </div>
      
      <h1 class="section-title">{{ section.settings.title }}</h1>
      <p class="section-subtitle">{{ section.settings.subtitle }}</p>
    </div>

    <!-- Cards Grid -->
    <div class="cards-container">
      {% for block in section.blocks %}
        <div class="card card-{{ forloop.index }}" {{ block.shopify_attributes }}>
          
          <!-- Icon -->
          <div class="card-icon">
            {% if block.settings.icon != blank %}
              {{ block.settings.icon }}
            {% else %}
              <div class="icon-placeholder"></div>
            {% endif %}
          </div>
          
          <!-- Content -->
          <div class="card-content">
            <h3 class="card-title">{{ block.settings.title }}</h3>
            <p class="card-description">{{ block.settings.description }}</p>
          </div>
          
        </div>
      {% endfor %}
    </div>

  </div>
</div>

<style>
.how-to-use-section {
  padding: 80px 0;
  background-color: #FFFFFF;
}

.container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 20px;
}

.section-header {
  text-align: center;
  margin-bottom: 60px;
}

.prepare-button {
  display: inline-flex;
  align-items: center;
  gap: 8px;
  padding: 8px 16px;
  background: rgba(97, 161, 205, 0.10);
  border-radius: 16px;
  margin-bottom: 30px;
}

.prepare-icon {
  width: 24px;
  height: 27px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.prepare-icon svg {
  width: 24px;
  height: 27px;
}

.prepare-text {
  color: #61A1CD;
  font-size: 14px;
  font-family: Inter, sans-serif;
  font-weight: 500;
  line-height: 21px;
  letter-spacing: 0.14px;
}

.section-title {
  font-size: clamp(2rem, 4vw, 3rem);
  font-weight: 700;
  color: #5A3838;
  margin-bottom: 16px;
  line-height: 1.2;
}

.section-subtitle {
  font-size: 1.1rem;
  color: #5A3838;
  max-width: 700px;
  margin: 0 auto;
  line-height: 1.6;
}

.cards-container {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16px;
}

.card {
  border-radius: 12px;
  padding: 24px 20px;
  position: relative;
  min-height: 180px;
  display: flex;
  flex-direction: column;
  transition: transform 0.3s ease;
}

.card:hover {
  transform: translateY(-5px);
}

.card-1 {
  background-color: #5A3838;
}

.card-2 {
  background-color: #61A1CC;
}

.card-3 {
  background-color: #F1D282;
}

.card-icon {
  width: 44px;
  height: 44px;
  border-radius: 50%;
  background: transparent;
  border: 1px solid #FFFCFC;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16px;
  flex-shrink: 0;
}

.card-3 .card-icon {
  background: transparent;
  border: 1px solid #5A3838;
}

.card-icon svg {
  width: 24px;
  height: 24px;
}

.card-content {
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}

.card-title {
  font-size: 1.15rem; /* ~18px */
  font-weight: 600;
  color: #fff;
  margin-bottom: 8px;
  line-height: 1.4;
  font-family: Inter, sans-serif;
}

.card-3 .card-title {
  color: #5A3838;
}

.card-description {
  font-size: 0.8125rem; /* 13px */
  font-weight: 400;
  color: #fff;
  line-height: 1.4;
  margin: 0;
  font-family: Inter, sans-serif;
}

.card-3 .card-description {
  color: #5A3838;
}

.icon-placeholder {
  width: 30px;
  height: 30px;
  background: rgba(0, 0, 0, 0.1);
  border-radius: 4px;
}

/* Responsividade */
@media (max-width: 768px) {
  .how-to-use-section {
    padding: 60px 0;
  }

  .cards-container {
    grid-template-columns: 1fr;
    gap: 16px;
  }

  .card {
    padding: 24px 18px;
    min-height: 170px;
  }

  .card-icon {
    width: 40px;
    height: 40px;
    margin-bottom: 14px;
  }

  .card-icon svg {
    width: 22px;
    height: 22px;
  }

  .card-title {
    font-size: 1.05rem;
  }
  
  .card-description {
    font-size: 0.75rem;
  }
}
</style>

