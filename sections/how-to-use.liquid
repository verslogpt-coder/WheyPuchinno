<div class="how-to-use-section">
  <div class="container">
    
    <!-- Header -->
    <div class="section-header">
      <!-- Botão Prepare-se -->
      <div class="prepare-button">
        <div class="prepare-icon">
          <svg width="24" height="27" viewBox="0 0 24 27" fill="none" xmlns="http://www.w3.org/2000/svg">
