{% comment %}
  Seção Hero para página de Pagamento
{% endcomment %}

<div class="pagamento-hero" style="background-color: {{ section.settings.background_color }}; color: {{ section.settings.text_color }};">
  <div class="pagamento-hero__inner">
    <div class="pagamento-hero__content">
      <h1 class="pagamento-hero__title">{{ section.settings.title }}</h1>
      <p class="pagamento-hero__subtitle">{{ section.settings.subtitle }}</p>
    </div>
  </div>
</div>

<style>
  .pagamento-hero {
    padding: 80px 0;
    text-align: center;
  }
  
  .pagamento-hero__inner {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }
  
  .pagamento-hero__title {
    font-size: 48px;
    font-weight: 700;
    line-height: 1.2;
    margin: 0 0 16px 0;
    font-family: Inter, sans-serif;
  }
  
  .pagamento-hero__subtitle {
    font-size: 20px;
    font-weight: 400;
    line-height: 1.5;
    margin: 0;
    opacity: 0.9;
  }
  
  @media (max-width: 768px) {
    .pagamento-hero {
      padding: 60px 0;
    }
    
    .pagamento-hero__title {
      font-size: 36px;
    }
    
    .pagamento-hero__subtitle {
      font-size: 18px;
    }
  }
</style>

{% schema %}
{
  "name": "Hero Pagamento",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Título",
      "default": "Pagamento"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtítulo",
      "default": "Formas de pagamento seguras e flexíveis"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Cor de fundo",
      "default": "#5A3838"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Cor do texto",
      "default": "#FFFFFF"
    }
  ],
  "presets": [
    {
      "name": "Hero Pagamento"
    }
  ]
}
{% endschema %}




