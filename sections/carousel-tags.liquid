{% comment %}
  Carrossel de Tags
  Tags animadas com scroll infinito
{% endcomment %}

<!-- Carrossel de Tags -->
<section class="carrossel-tags-section" aria-label="Carrossel de benefícios">
  <div class="carrossel-container">
    <div class="carrossel-tags">
      <div class="carrossel-track">
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'tag' %}
              <div class="carrossel-item">{{ block.settings.tag_text }}</div>
              {% if block.settings.show_icon %}
                <div class="carrossel-icon">
                  {{ block.settings.icon_svg }}
                </div>
              {% endif %}
          {% endcase %}
        {% endfor %}
        
        <!-- Duplicação para scroll infinito -->
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'tag' %}
              <div class="carrossel-item">{{ block.settings.tag_text }}</div>
              {% if block.settings.show_icon %}
                <div class="carrossel-icon">
                  {{ block.settings.icon_svg }}
                </div>
              {% endif %}
          {% endcase %}
        {% endfor %}
      </div>
    </div>
  </div>
</section>

