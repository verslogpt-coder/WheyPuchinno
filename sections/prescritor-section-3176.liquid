{% comment %} Página Prescritor – Seção (Node 89-3176) {% endcomment %}

<section class="prescritor-3176-section" style="background: {{ section.settings.background | default: '#FFFFFF' }};">
  <div class="prescritor-3176-container">
    {% if section.settings.title != blank %}<h2 class="title">{{ section.settings.title }}</h2>{% endif %}
    {% if section.settings.subtitle != blank %}<p class="subtitle">{{ section.settings.subtitle }}</p>{% endif %}

    <div class="features">
      {% for block in section.blocks %}
        <div class="feature">
          {% if block.settings.icon != blank %}<img class="icon" src="{{ block.settings.icon | image_url: width: 96 }}" alt="" loading="lazy">{% endif %}
          <div class="content">
            {% if block.settings.heading != blank %}<h3 class="heading">{{ block.settings.heading }}</h3>{% endif %}
            {% if block.settings.text != blank %}<p class="text">{{ block.settings.text }}</p>{% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<style>
.prescritor-3176-section { width: 100%; padding: 80px 0; font-family: 'Inter', sans-serif; }
.prescritor-3176-container { max-width: 1400px; margin: 0 auto; padding: 0 60px; display:flex; flex-direction:column; gap: 20px; }
.title { font-size: 40px; line-height: 48px; font-weight: 700; color:#342222; margin:0; }
.subtitle { font-size: 18px; line-height: 26px; color: rgba(52,34,34,.8); margin: 0; }
.features { display: grid; grid-template-columns: repeat(3, 1fr); gap: 24px; margin-top: 12px; }
.feature { background:#FFFFFF; border: 1px solid rgba(0,0,0,.06); border-radius: 16px; padding: 20px; display:flex; gap: 14px; align-items:flex-start; }
.icon { width: 36px; height: 36px; object-fit: contain; }
.heading { margin: 0; font-size: 18px; line-height: 22px; color:#342222; }
.text { margin: 6px 0 0 0; font-size: 15px; line-height: 22px; color: rgba(52,34,34,.8); }

@media (max-width: 768px){
  .prescritor-3176-section { padding: 50px 0; }
  .prescritor-3176-container { padding: 0 20px; }
  .title { font-size: 28px; line-height: 34px; }
  .subtitle { font-size: 16px; line-height: 24px; }
  .features { grid-template-columns: 1fr; gap: 16px; }
  .feature { padding: 18px; border-radius: 14px; }
}

@media (max-width: 1024px) and (min-width: 769px) {
  .prescritor-3176-container { padding: 0 32px; }
  .features { grid-template-columns: repeat(2, 1fr); }
}
</style>

{% schema %}
{
  "name": "Prescritor • Seção 3176",
  "settings": [
    {"type":"color","id":"background","label":"Cor de fundo"},
    {"type":"text","id":"title","label":"Título"},
    {"type":"text","id":"subtitle","label":"Subtítulo"}
  ],
  "blocks": [
    {"type":"feature","name":"Item","settings":[
      {"type":"image_picker","id":"icon","label":"Ícone"},
      {"type":"text","id":"heading","label":"Título"},
      {"type":"textarea","id":"text","label":"Texto"}
    ]}
  ],
  "max_blocks": 6,
  "presets": [ { "name": "Prescritor • Seção 3176" } ]
}
{% endschema %}




